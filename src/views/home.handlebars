<main>
    <div class='product-list'>
        <h2>Product List</h2>
        <ul class='products'>
            {{#each products}}
                <li class='product-item'>
                    <form
                        action='/api/products/{{this.id}}?_method=DELETE'
                        method='POST'
                        class='delete-form'
                    >
                        <button type='submit' class='delete-btn'>âœ•</button>
                    </form>
                    <img
                        class='product-img'
                        src='/img/img-products/{{this.thumbnail}}'
                        alt={{this.title}}
                    />
                    <h3 class='product-title'>{{this.title}}</h3>
                    <p class='product-desc'>{{this.description}}</p>
                    <span>${{this.price}}</span>
                </li>
            {{/each}}
        </ul>
    </div>
    <aside>
        <form
            action='http://localhost:8080/api/products'
            method='post'
            enctype='multipart/form-data'
        >
            <input type='text' name='title' placeholder='Title' required />
            <input type='number' name='price' placeholder='Price' required />
            <input
                type='text'
                name='description'
                placeholder='Description'
                required
            />
            <input type='file' name='file' />
            <button type='submit'>Add Product</button>
        </form>
    </aside>
</main>